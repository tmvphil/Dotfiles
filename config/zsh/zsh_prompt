setopt prompt_subst
autoload -Uz vcs_info

precmd() { 
    retcode=$?
    if [ $retcode -ne 0 ]; then
        STATUS="─(%B%F{red}$retcode%b%F{blue})"
    else
        STATUS=""
    fi

    if [ $USERNAME != phil ]; then
      UNAME="─($USERNAME)─"
    else
      UNAME=""
    fi
    print -rP "%F{blue}┌─[%B%F{green}%~%b%F{blue}]$UNAME$STATUS"
    }

PROMPT="%F{blue}└─╼ %f"




